<odoo>

    <!-- Add a custom form view -->
    <record id="get_a_quote_view_form" model="ir.ui.view">
		<field name="name">Get A Quote</field>
		<field name="model">quotation.service</field>
		<field name="arch" type="xml">

			<form>

                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button class="oe_stat_button" string="Motor" type="object" name="motor"
                            icon="fa-car">
                        </button>
                        <button class="oe_stat_button" string="Medical" type="object" name="medical"
                            icon="fa-stethoscope">
                        </button>
                        <button class="oe_stat_button" string="Travel" type="object" name="test"
                            icon="fa-plane">
                        </button>
                    </div>
<!--                    <h3>Quick Quote</h3>-->


                        <field name="lob"  invisible="1"/>


                        <group attrs="{'invisible': [('lob', '!=', 1)]}">
                                <field name="package" />
                                <field name="dob"/>
                                <field name="product" />
                        </group >
                        <group attrs="{'invisible': [('lob', '!=', 3)]}">
                            <group>
                                    <field name="brand" />
                                    <field name="deductible"/>
                            </group>
                            <group>
                                    <field name="sum_insured"/>
                            </group>

                        </group>
                    <div class="container">
                        <div class="row">
                            <div  class="card mb-4 mb-lg-0 col" >
                                    <div class="card-body">
                                        <h4 class="card-title text-muted text-uppercase text-center">الماسة</h4>
                                        <h2 class="card-price text-center">$ <field readonly="1" force_save="1" name="price"/></h2>
                                        <hr/>
                                        <div class="text-center">
                                            <button type="object" string="Create Application" class="oe_highlight"/>
                                        </div>
                                    </div>
                            </div>
                            <div class="card mb-4 mb-lg-0 col" >
                                    <div class="card-body">
                                        <h4 class="card-title text-muted text-uppercase text-center">أمان</h4>
                                        <h2 class="card-price text-center">$ <field readonly="1" force_save="1" name="price"/></h2>
                                        <hr/>
                                        <div class="text-center">
                                            <button type="object" string="Create Application" class="oe_highlight"/>
                                        </div>
                                    </div>
                            </div>
                            <div class="card mb-4 mb-lg-0 col" >
                                    <div class="card-body">
                                        <h4 class="card-title text-muted text-uppercase text-center">الذهبية</h4>
                                        <h2 class="card-price text-center">$ <field readonly="1" force_save="1" name="price"/></h2>
                                        <hr/>
                                        <div class="text-center">
                                            <button type="object" string="Create Application" class="oe_highlight"/>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </div>





                </sheet>


                <!-- <xpath expr="." position="inside">
                    <link rel="stylesheet" href="/Arope-spaces/static/src/css/main.css"/>
                </xpath> -->

			</form>
		</field>
	</record>
    <template id="assets_backend" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/Arope-spaces/static/src/css/main.css"/>
        </xpath>
    </template>
    <!-- Add a custom Tree (List) view -->
    <record id="get_a_quote_view_tree" model="ir.ui.view">
		<field name="name">Get A Quote</field>
		<field name="model">quotation.service</field>
		<field name="arch" type="xml">
			<tree>
				<field name="lob"/>
                <field name="package"/>
                <field name="dob"/>
                <field name="product"/>

			</tree>
		</field>
	</record>
    <record model="ir.actions.act_window" id="quick_quote_action">
            <field name="name">Quick Quote</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">quotation.service</field>
            <field name='domain'>[('lob','=','1')]</field>
            <field name="view_id" ref="get_a_quote_view_tree"/>
            <field name="view_mode">form,tree</field>
    </record>




</odoo>