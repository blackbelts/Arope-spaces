<odoo>

    <!-- Add a custom form view -->
    <record id="insurance_view_form" model="ir.ui.view">
		<field name="name">Insurance Application</field>
		<field name="model">insurance.quotation</field>
		<field name="arch" type="xml">
			<form>
                <header>

                    <field name="test_state" widget="statusbar"/>

                </header>

                <sheet>
                    <div style="margin-bottom: 5px;">
                        <button style="margin-left: 3px;" name="approve_medical_price" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'quick_quote')]}" groups="Arope-spaces.broker_space_group"/>
<!--                        <button style="margin-left: 3px;" type="object" string="Submit" name="submit_questionnaire" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'proposal')]}" groups="Arope-spaces.broker_space_group"/>-->
                        <button style="margin-left: 3px;" name="assign_surveyor" string="Assign Surveyor" type="object" class="oe_highlight" attrs="{'invisible': ['|',('state', '!=', 'survey_required'),('sub_state', '!=', 'complete')]}" groups="Arope-spaces.managers_group"/>
                        <button style="margin-left: 3px;" name="reinsurance_confirm" string="Reinsurance" type="object" class="oe_highlight" attrs="{'invisible': ['|',('state', '!=', 'survey'),('sub_state', '!=', 'complete')]}" groups="Arope-spaces.managers_group"/>
                        <button style="margin-left: 3px;" name="survey_confirm" string="Offering" type="object" class="oe_highlight" attrs="{'invisible': ['|',('state', 'not in', ['reinsurance','survey']),('sub_state', '!=', 'complete')]}" groups="Arope-spaces.managers_group"/>
                        <button style="margin-left: 3px;" name="survey_required" string="Survey Required" type="object" class="oe_highlight" attrs="{'invisible': ['|',('state', '!=', 'proposal'),('sub_state', '!=', 'complete')]}" groups="Arope-spaces.managers_group"/>
                        <button style="margin-left: 3px;" name="submit_survey_required" string="Survey Report" type="object" class="oe_highlight" attrs="{'invisible': ['|',('state', '!=', 'surveyor'),('sub_state', '!=', 'complete')]}" groups="Arope-spaces.broker_space_group"/>
                        <button style="margin-left: 3px;" name="survey_confirm" string="Offering" type="object" class="oe_highlight" attrs="{'invisible': ['|',('state', '!=', 'proposal'),('sub_state', '!=', 'complete')]}" groups="Arope-spaces.managers_group"/>
<!--                        <button style="margin-left: 3px;" name="final_confirm" string="Confirm Offer" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'offer')]}" groups="Arope-spaces.managers_group"/>-->
                        <button style="margin-left: 3px;" name="accept_offer" string="Upload Document" type="object" class="oe_highlight" attrs="{'invisible': ['|',('state', '!=', 'offer'),('sub_state', '!=', 'complete')]}" groups="Arope-spaces.broker_space_group"/>
                        <button style="margin-left: 3px;" name="issued" attrs="{'invisible': [('state', '!=', 'policy_pending')]}" string="Issued"  type="object" class="oe_highlight" groups="Arope-spaces.managers_group"/>
<!--                        <button style="margin-left: 3px;" name="submit_survey" string="Submit Survey" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'survey')]}" groups="Arope-spaces.surveyor_group"/>-->
                        <button style="margin-left: 3px;" name="complete_and_proceed" string="Complete And Proceed" type="object" class="oe_highlight" attrs="{'invisible': ['|',('state', 'not in', ['proposal','survey_required','surveyor','survey','offer','application', 'policy', 'reinsurance']),('sub_state', '!=', 'pending')]}" groups="Arope-spaces.surveyor_group"/>
                        <button style="margin-left: 3px;" name="reject" string="Reject" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'in', ['proposal', 'submitted'])]}" groups="Arope-spaces.managers_group,Arope-spaces.broker_space_group"/>


                    </div>
                    <h3>Insurance Application Form</h3>
                    <h2 attrs="{'invisible': [('state', '!=', 'quick_quote')]}">Enter quick quote required info and get instant result</h2>
                    <h2 attrs="{'invisible': [('state', '!=', 'proposal')]}">Kindly answer application form questions</h2>
                    <h2 attrs="{'invisible': [('state', '!=', 'offer_ready')]}">Offer is ready. You can print</h2>
                    <h2 attrs="{'invisible': [('state', '!=', 'application')]}">Kindly upload documents as per below list</h2>
                    <h2 attrs="{'invisible': [('state', '!=', 'policy')]}">Policy issue is in progress</h2>
                    <h2 attrs="{'invisible': [('state', '!=', 'issued')]}">Policy is issued</h2>
                    <h2 attrs="{'invisible': [('state', '!=', 'survey_required')]}">Fill in survey required information</h2>
                    <h2 attrs="{'invisible': [('state', '!=', 'quick_quote')]}">Pending on reinsurance agreement</h2>

                    <group>
                        <group>
                            <field name="state" invisible="1"/>
                            <field name="sub_state" invisible="1"/>
                            <field name="lob"/>
                        </group>
                        <group>
                            <field  name="product_id"/>
                        </group>
                    </group>
                    <br/>
                    <h3>Customer Information</h3>
                    <group>
                        <group>

                            <field name="name" force_save="1" attrs="{'readonly': [('state', 'not in', ['quick_quote', 'proposal'])]}"/>
                            <field name="phone" force_save="1" attrs="{'readonly': [('state', 'not in', ['quick_quote', 'proposal'])]}"/>
<!--                            <field name="contact" force_save="1" attrs="{'readonly': [('state', 'not in', ['quick_quote', 'proposal'])]}"/>-->
                            <field name="email" force_save="1" attrs="{'readonly': [('state', 'not in', ['quick_quote', 'proposal'])]}"/>
                            <field name="target_price" force_save="1" attrs="{'readonly': [('state', 'not in', ['quick_quote', 'proposal'])]}"/>
                        </group>
                        <group>
                            <field name="application_number" readonly="1" force_save="1"/>
                            <field name="policy_number" readonly="1" force_save="1" attrs="{'invisible': [('policy_number', '=', False)]}"/>
                            <field name="application_date" />
                            <field name="quote_trials" readonly="1" force_save="1"  attrs="{'invisible': [('lob', '!=', 1)]}"/>
                            <field name="final_price" readonly="1" force_save="1"/>
<!--                            <field name="create_uid" string="Broker" />-->
                        </group>
                    </group>

                     <notebook>
                        <page string="Quick Quote" attrs="{'invisible': [('lob', 'not in', [1, 3])]}">
                            <group attrs="{'invisible': [('lob', '!=', 1)]}">
                                <field name="package" force_save="1" attrs="{'readonly': [('state', '!=','quick_quote')]}" />
                                <field name="dob" force_save="1" attrs="{'invisible': [('package', '!=', 'individual')]}" />
                                <field name="product" force_save="1" attrs="{'readonly': [('state', '!=', 'quick_quote')]}"/>
                            </group >
                            <group attrs="{'invisible': [('lob', '!=', 3)]}">
                                <group>
                                    <field name="brand" force_save="1" attrs="{'readonly': [('state', '!=','quick_quote')]}" />
                                    <field name="deductible" force_save="1" attrs="{'invisible': [('brand', '!=', 'all brands')]}"/>

                                </group>
                                <group>
                                    <field name="sum_insured" force_save="1" attrs="{'readonly': [('state', '!=', 'quick_quote')]}"/>
                                </group>
                            </group>

                            <group attrs="{'invisible': ['|',('package', '=', 'individual'),('lob', '!=', 1)]}">
                                <field name="family_age">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="type"/>
                                        <field name="gender"/>
                                        <field name="DOB"/>
                                        <field name="age"/>
                                    </tree>
                                </field>
                            </group>
                            <group>
                                <field name="price" force_save="1" attrs="{'readonly': [('state', '!=', 'offer')]}"/>
                            </group>
                        </page>
<!--                        <page string="Download Form"  attrs="{'invisible': [('state', '=', 'quick_quote')]}">-->
<!--                             <button name="create_pdf" string="Download Application" type="object" class="oe_highlight"/>-->
<!--                            <group>-->
<!--                                <field name="questionnaire" filename="file_name"/>-->
<!--                                <field name="file_name" invisible="1"/>-->

<!--                            </group>-->
<!--                        </page>-->

                        <page string="Application Form"  attrs="{'invisible': [('state', '=', 'quick_quote')]}">

                            <field name="choose_questions_ids" attrs="{'invisible': [('choose_questions_ids', '=', False)]}">
                                <tree editable="bottom">
                                    <field name="question"/>
                                    <field name="options"/>
                                    <field name="file"/>
                                </tree>
                            </field>
                            <field name="numerical_questions_ids" attrs="{'invisible': [('choose_questions_ids', '=', False)]}">
                                <tree editable="bottom">
                                    <field name="question"/>
                                    <field name="value"/>
                                    <field name="file"/>
                                </tree>
                            </field>
                            <field name="text_questions_ids" attrs="{'invisible': [('choose_questions_ids', '=', False)]}">
                                <tree editable="bottom">
                                    <field name="question"/>
                                    <field name="text"/>
                                    <field name="file"/>
                                </tree>
                            </field>

                        </page>
                         <page string="Required For Survey"  attrs="{'invisible': [('state', 'in', ['quick_quote','proposal', 'submitted'])]}">
                            <group>
                                <group>
                                    <field name="name_of_contact_person"/>
                                    <field name="main_phone"/>
                                    <field name="spare_phone"/>
                                </group>
                                <group>
                                    <field name="address"/>
                                    <field name="sum_insured"/>
                                </group>


                            </group>

                            <group>
                                <field name="available_time_ids">
                                    <tree editable="bottom">
                                            <field name="date"/>
                                            <field name="date_to"/>
                                            <field name="time_from"/>
                                            <field name="time_to"/>
                                    </tree>
                                </field>
                            </group>
                         </page>
                         <page string="Surveyor" attrs="{'invisible': [('state', 'in', ['quick_quote','proposal', 'survey_required'])]}"  groups="Arope-spaces.managers_group">
                             <group>
                                 <field name="survey_date" />
                                 <field name="surveyor"/>
                             </group>
                         </page>
                         <page string="Survey Report"  attrs="{'invisible': [('state', 'in', ['quick_quote','proposal', 'submitted' ,'survey_required', 'surveyor'])]}">
                                <field name="survey_report_ids">
                                    <tree editable="bottom">
                                        <field name="question"/>
<!--                                        <field name="desc" />-->
<!--                                        <field name="options"/>-->
<!--                                        <field name="text"/>-->
<!--                                        <field name="value"/>-->
<!--                                        <field name="boolean"/>-->
                                        <field name="file"/>
                                    </tree>
                                </field>
                                <group>
                                  <field name="recomm"/>
                                </group>

                         </page>

                        <page string="Offer" attrs="{'invisible': [('state', 'in', ['quick_quote','proposal', 'survey', 'submitted','survey_required', 'surveyor'])]}">
                            <field name="offer_ids">
                                    <tree editable="bottom">
                                        <field name="question"/>
                                        <field name="text"/>
                                        <field name="value"/>
                                        <field name="file"/>
                                    </tree>
                                </field>
                        </page>
                        <page string="Scanned Application" attrs="{'invisible': [('state', 'in', ['quick_quote','proposal', 'survey', 'offer', 'submitted','survey_required', 'surveyor','offer_ready'])]}">
                            <field name="final_application_ids">
                                <tree editable="bottom">
                                    <field name="description"/>
                                    <field name="application_files" />
                                </tree>
                            </field>
                        </page>
                         <page string="Rejection Reason" attrs="{'invisible': [('state', '!=', 'cancel')]}">
                            <group>
                                <field name="rejection_reason"/>
                                <field name="comment"/>
                            </group>
                        </page>
                         <page string="State History" >
                            <field name="state_history_ids">
                                 <tree editable="bottom">
                                        <field name="state" readonly="1" force_save="1"/>
                                        <field name="datetime" readonly="1" force_save="1"/>
                                        <field name="user" readonly="1" force_save="1"/>
                                    </tree>
                            </field>
                        </page>

                    </notebook>
                </sheet>
			</form>
		</field>
	</record>
    <!-- Add a custom Tree (List) view -->
    <record id="insurance_view_tree" model="ir.ui.view">
		<field name="name">Insurance Application</field>
		<field name="model">insurance.quotation</field>
		<field name="arch" type="xml">
			<tree>
<!--                <field name="create_uid" string="Broker"/>-->
                <field name="name"/>
                <field name="phone"/>
<!--                <field name="email"/>-->
                <field name="application_number"/>
                <field name="application_date"/>
				<field name="lob"/>
                <field name="product"/>
                <field name="target_price"/>
                <field name="final_price"/>
                <field name="state"/>
                <field name="sub_state"/>

			</tree>
		</field>
	</record>
    <record id="insurance_view_search" model="ir.ui.view">
        <field name="name">insurance.search</field>
        <field name="model">insurance.quotation</field>
        <field name="arch" type="xml">
            <search string="Insurance">
                <group expand="0" string="Group By">
                    <filter string="State" name="groupby_state" context="{'group_by': 'state'}"/>
                    <filter string="State" name="groupby_sub_state" context="{'group_by': 'sub_state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="insurance_action">
            <field name="name">Insurance Application</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">insurance.quotation</field>
            <field name="context">{'search_default_groupby_state': 1,'search_default_groupby_sub_state': 1}</field>
            <field name="view_id" ref="insurance_view_tree"/>
            <field name="view_mode">form,tree,kanban</field>
    </record>
     <record id="sequence_application_number" model="ir.sequence">
        <field name="name">application_number</field>
        <field name="code">application_number</field>
<!--        <field name="prefix"><field name="lob.name"/></field>-->
        <field name="padding">6</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>
    <record id="sequence_trial_number" model="ir.sequence">
        <field name="name">trial_number</field>
        <field name="code">trial_number</field>
<!--        <field name="prefix"><field name="lob.name"/></field>-->
        <field name="padding">6</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>

</odoo>